<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/appoint_CARD_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/appoint_LAY_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name, Date, and Time in one line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Name -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/appoint_TXT_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Name" />

                <!-- Date -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/appoint_TXT_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    tools:text="10/10/2024" />

                <!-- Time -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/appoint_TXT_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    tools:text="18:30" />

            </LinearLayout>

            <!-- Text below -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/appoint_TXT_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:textSize="14sp"
                android:maxLines="2"
                tools:text="@tools:sample/lorem/random" />

            <!-- Button Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="end">

                <!-- Change Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    app:cornerRadius="20dp"
                     />

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    app:cornerRadius="20dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
